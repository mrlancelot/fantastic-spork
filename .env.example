PYTHONPATH=backend/src

# Shared API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Convex Configuration
VITE_CONVEX_URL=https://your-convex-instance.convex.cloud
CONVEX_URL=https://your-convex-instance.convex.cloud
CONVEX_DEPLOYMENT=dev:your-convex-deployment

# Frontend Environment Variables (Vite requires VITE_ prefix)
VITE_APP_NAME=Fantastic Spork
VITE_APP_VERSION=1.0.0
